@model List<CustomerViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Üye Adı</th>
        <th>Üye Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CustomerID</td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Customer/AddCustomer" class="btn btn-outline-info">Yeni Kişi Girişi</a>
</div>